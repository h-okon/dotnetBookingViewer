@{
    ViewData["Title"] = "Home Page";
}



<div class="text-center">
    <h1 class="display-4">Witaj na stronie wyświetlającej najbliższe rezerwacje.</h1>
    <div class="row pt-2">
        <div class="col">
            <h3>Najbliższe rezerwacje</h3>
            <table class="w-100 table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th> Godziny [z]</th>
                        <th> Imie i nazwisko</th>
                        <th> Pozycja </th>
                    </tr>
                </thead>

                @foreach (Booking book in ViewBag.allBookings)
                {
                    @if (Convert.ToInt32(book.type) == 2)
                    {
                        <tr>
                            <td> @book.t_start - @book.t_end <br /><div style="font-size: 12px">@book.date.ToString("dd/MM/yyyy")</div></td>
                            <td> @book.name @book.surname </td>
                            <td class="text-right"><i class="fas fa-graduation-cap"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                        </tr>
                    }
                    else if (Convert.ToInt32(book.type) == 3)
                    {
                        <tr style="background-color: blue;">
                            <td> @book.t_start - @book.t_end <br /><div style="font-size: 12px">@book.date.ToString("dd/MM/yyyy")</div></td>
                            <td> @book.name @book.surname </td>
                            <td class="text-right"><i class="fas fa-chalkboard-teacher"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                        </tr>
                    }
                    else
                    {
                        <tr>
                            <td> @book.t_start - @book.t_end <br /><div style="font-size: 12px">@book.date.ToString("dd/MM/yyyy")</div></td>
                            <td> @book.name @book.surname </td>
                            <td class="text-right"> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                        </tr>
                    }
                }
            </table>
        </div>
        <div class="col">
            <h3>Dzisiejsze rezerwacje</h3>
            <table class="w-100 table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th> Godziny [z]</th>
                        <th> Imie i nazwisko</th>
                        <th> Pozycja </th>
                    </tr>
                </thead>
                @if (ViewBag.todayBookings.Count == 0)
                {
                    <tr>
                        <td colspan="3">Brak rezerwacji.</td>
                    </tr>
                }
                else
                {
                    @foreach (Booking book in ViewBag.todayBookings)
                    {
                        @if (Convert.ToInt32(book.type) == 2)
                        {
                            <tr>
                                <td> @book.t_start - @book.t_end <br /></td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"><i class="fas fa-graduation-cap"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                        else if (Convert.ToInt32(book.type) == 3)
                        {
                            <tr style="background-color: blue;">
                                <td> @book.t_start - @book.t_end</td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"><i class="fas fa-chalkboard-teacher"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td> @book.t_start - @book.t_end</td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                    }
                }

            </table>
        </div>
        <div class="col">
            <h3>Jutrzejsze rezerwacje</h3>
            <table class="w-100 table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th> Godziny [z]</th>
                        <th> Imie i nazwisko</th>
                        <th> Pozycja </th>
                    </tr>
                </thead>
                @if (ViewBag.tomorrowBookings.Count == 0)
                {
                    <tr>
                        <td colspan="3">Brak rezerwacji.</td>
                    </tr>
                }
                else
                {
                    @foreach (Booking book in ViewBag.tomorrowBookings)
                    {
                        @if (Convert.ToInt32(book.type) == 2)
                        {
                            <tr>
                                <td> @book.t_start - @book.t_end <br /></td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"><i class="fas fa-graduation-cap"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                        else if (Convert.ToInt32(book.type) == 3)
                        {
                            <tr style="background-color: blue;">
                                <td> @book.t_start - @book.t_end</td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"><i class="fas fa-chalkboard-teacher"></i> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td> @book.t_start - @book.t_end</td>
                                <td> @book.name @book.surname </td>
                                <td class="text-right"> @book.position <br /><div style="font-size: 12px">@book.comment</div></td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
    </div>
    <h4 class="pt-4"><i class="fas fa-graduation-cap"></i> - rezerwacje treningowe || <i class="fas fa-chalkboard-teacher"></i> - rezerwacje egzaminacyjne</h4>
    <p class="mb-2">Polish vACC - Polska Wirtualna Kontrola Ruchu Lotniczego w sieci <a href="https://pl.wikipedia.org/wiki/VATSIM">VATSIM</a>.
    <br /> Strona wykonana przez: Hubert Szymon Okoń - 291114</p>
    <p class="mb-6"><a href="pl-vacc.org.pl"><img src="https://i.imgur.com/QUxQYXh.png?2" /></a></p>
</div>
